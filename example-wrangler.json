{
  "name": "auto-invoice",
  "account_id": "${YOUR_CLOUDFLARE_ACCOUNT_ID}",
  "main": "src/index.js",
  "compatibility_date": "2025-05-05",
  "vars": {
    "FROM_EMAIL": "${YOUR_EMAIL}"
  },
  "env": {
    "staging": {
      "vars": {
        "FROM_EMAIL": "${YOUR_EMAIL}"
      }
    },
    "production": {
      "vars": {
        "FROM_EMAIL": "${YOUR_EMAIL}"
      }
    }
  },
  "workers_dev": false,
  "preview_urls": false,
  "triggers": {
    "crons": [
      "0 9 25 2 *",
      "0 9 28 1,3-12 *"
    ]
  },
  "kv_namespaces": [
    {
      "binding": "INVOICES_KV",
      "id": "${YOUR_KV_ID}"
    }
  ],
  "r2_buckets": [
    {
      "binding": "R2_BUCKET",
      "bucket_name": "auto-invoice"
    }
  ],
  "observability": {
    "enabled": true,
    "head_sampling_rate": 1
  }
}
